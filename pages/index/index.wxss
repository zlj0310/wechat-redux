/**index.wxss**/
@import '../../components/productItem/productItem.wxss';

.logo-wrapper {
    height:100rpx;
    padding:20rpx 0;
    text-align:center;
}
.logo-wrapper image {
    height: 100%;
    width:25%;
}
.swiper {
    height:320rpx;
}
.swipper-wrap {
    width: 100%;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.ads-wrapper {
    width:98%;
    margin:0 1%;
    padding-bottom:40rpx;
}
.ads-item {
    width:50%;
    float:left;
    height:250rpx;
    margin-top:2%;
}
.ads-img {
    width:96%;
    margin:0 2%;
    height:100%;
}
.case-wrapper {
    padding:1%;
}
.case-name {
    font-size:30rpx;
    font-weight:700;
    height:80rpx;
    line-height:80rpx;
    padding-left:1%;
    color:#2b2d42;
    word-break:break-all;
    text-overflow:ellipsis;
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
    overflow:hidden;
    width:100%;
    float:left;
}
.item-wrapper {
    width: 50%;
    float: left;
    margin-bottom: 50rpx;
}

.banner-wrapper {
    width:100%;
    height:180rpx;
    text-align:center;
    margin-bottom:25px;
}
.banner-wrapper image {
    height:100%;
    width:95%;
}